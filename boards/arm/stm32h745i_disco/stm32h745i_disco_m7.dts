/dts-v1/;
#include <st/h7/stm32h745Xi_m7.dtsi>
#include <st/h7/stm32h745xihx-pinctrl.dtsi>
#include "stm32h745i_disco.dtsi"
	
/*
 * WARNING:
 * Possible pin conflicts: The pins PA2 and PB13 may conflict on selection of
 * ETH_STM32_HAL, since they are used in ST Zio or ST morpho connectors. To
 * avoid conflicting states the jumpers JP6 and JP7 must be in ON state.
 */

/ {
	model = "STMicroelectronics STM32H745I-DISCO board";
	compatible = "st,stm32h745i-disco";

	/* HW resources belonging to CM7 */
	chosen {
		zephyr,console = &usart3;
		zephyr,shell-uart = &usart3;
		zephyr,dtcm = &dtcm;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	pwmleds {
		compatible = "pwm-leds";

		red_pwm_led: red_pwm_led {
			pwms = <&pwm12 1 4 PWM_POLARITY_NORMAL>;
			label = "User LD3 - PWM12";
		};
	};

	aliases {
		led0 = &green_led;
		pwm-led0 = &red_pwm_led;
		sw0 = &user_button;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(25)>; /* STLink 25MHz clock */
	status = "okay";
};

&pll {
	div-m = <5>;
	mul-n = <192>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(480)>;
	d1cpre = <1>;
	hpre = <2>;
	d1ppre = <2>;
	d2ppre1 = <2>;
	d2ppre2 = <2>;
	d3ppre = <2>;
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pb10 &usart3_rx_pb11>;
	current-speed = <115200>;
	status = "okay";
	pinctrl-names="default";
};

&rtc {
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-names="default";

};

&timers12 {
	status = "okay";

	pwm12: pwm {
		status = "okay";
		st,prescaler = <10000>;
		pinctrl-0 = <&tim12_ch1_pb14>;
		pinctrl-names="default";
	};
};

&mac {
	status = "okay";
	pinctrl-0 = <&eth_rx_clk_pa1
		     &eth_mdio_pa2
		     &eth_rx_dv_pa7
		     &eth_mdc_pc1
		     &eth_rxd0_pc4
		     &eth_rxd1_pc5
		     &eth_rxd2_pb0
			 &eth_rxd3_pb1
			 &eth_tx_clk_pc3
			 &eth_tx_en_pg11
		     &eth_txd0_pg13
		     &eth_txd1_pg12
			 &eth_txd2_pc2
			 &eth_txd3_pe2
			 &eth_col_ph3
			 &eth_crs_ph2>;
	pinctrl-names="default";
};

&rng {
	status = "okay";
};
